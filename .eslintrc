{
  "extends": [
    "airbnb-base"
  ],
  "plugins": [
    "node",
    "mocha"
  ],
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "no-use-before-define": 0,
    "object-curly-newline": 0,
    "no-underscore-dangle": 0,
    "class-methods-use-this": [
      "off"
    ],
    "no-console": [
      "error",
      {
        "allow": [
          "log",
          "info",
          "warn",
          "error"
        ]
      }
    ],
    "max-len": [
      "error",
      150
    ]
  },
  "globals": {
    "__basedir": "writable",
    "__frontenddir": "writable",
    "__backenddir": "writable",
    "base": false,
    "expect": false,
    "nock": false,
    "request": false
  }
}
